{
  "title": "Personal rules (@filriya)",
  "rules": [
    {
      "description": "Send jis_eisuu when type esc",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "escape"
          },
          "to": [
            { "key_code": "escape" },
            { "key_code": "japanese_eisuu" }
          ],
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^com\\.vmware\\.fusion$",
                "^com\\.vmware\\.horizon$",
                "^com\\.vmware\\.view$"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "open_bracket",
            "modifiers": { "mandatory": [ "control" ], "optional": [ "any" ] }
          },
          "to": [
            { "key_code": "escape" },
            { "key_code": "japanese_eisuu" }
          ],
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^com\\.vmware\\.fusion$",
                "^com\\.vmware\\.horizon$",
                "^com\\.vmware\\.view$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Send jis_eisuu when activate termial and alfred",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "mandatory": [
                "command"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "japanese_eisuu"
            },
            {
              "key_code": "spacebar",
              "modifiers": [
                "command"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^com\\.vmware\\.fusion$",
                "^com\\.vmware\\.horizon$",
                "^com\\.vmware\\.view$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "toggle IME when press shift-space",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": { "mandatory": [ "left_shift" ] }
          },
          "to": [
            {
              "select_input_source": {
                "language": "ja" 
              }
            }
          ],
          "conditions": [
            {
              "type": "input_source_if",
              "input_sources": [
                { "language": "en" }
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": { "mandatory": [ "left_shift" ] }
          },
          "to": [
            {
              "select_input_source": {
                "language": "en" 
              }
            }
          ],
          "conditions": [
            {
              "type": "input_source_if",
              "input_sources": [
                { "language": "ja" }
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Toggle Alacritty",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": { "mandatory": [ "left_control" ] }
          },
          "to": [
            { "shell_command": "osascript ~/bin/alacritty_hide.scpt" }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [ "^io\\.alacritty$" ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": { "mandatory": [ "left_control" ] }
          },
          "to": [
            { "shell_command": "open /Applications/Alacritty.app" },
            { "key_code": "japanese_eisuu" }
          ],
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^io\\.alacritty$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Send jis_kana/jis_eisuu when type command alone",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_command",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_command"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "japanese_eisuu"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^com\\.vmware\\.fusion$",
                "^com\\.vmware\\.horizon$",
                "^com\\.vmware\\.view$"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "right_command",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_command"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "japanese_kana"
            }
          ]
        }
      ]
    },
