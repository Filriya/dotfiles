defencoding utf-8
encoding utf-8 utf-8
multiuser on
autodetach on

defscrollback 10000
shell -$SHELL

shelltitle "$ |zsh"
caption always "%?%F%{= mk}%:%{= Kk}%?%-w%?%F%{=u mW}%:%{=u KW}%?%n %t%{-}%+w%{-u} %= %c"
hardstatus off

defbce             on
term               xterm-256color
termcapinfo xterm-256color 'is=^[r^[mJ^[H^[?7h^[?1;4;6l'
termcapinfo xterm* 'Co#256:pa#32767:AB=\E[48;5;%dm:AF=\E[38;5;%dm:'
termcapinfo kterm* 'Co#256:pa#32767:AB=\E[48;5;%dm:AF=\E[38;5;%dm:'

escape ^a^a
startup_message off
vbell off
autodetach on

cjkwidth on

bind x remove
bind ^x remove
bind o only
bind ^o only
bind j eval 'focus down'
bind ^j eval 'focus down'
bind k eval 'focus up'
bind ^k eval 'focus up'
bind h eval 'focus left'
bind ^h eval 'focus left'
bind l eval 'focus right'
bind ^l eval 'focus right'
bind v eval 'split -v' focus screen
bind ^v eval 'split -v' focus screen
bind s eval 'split' focus screen
bind ^s eval 'split' focus screen
bind K kill
bind L redisplay
bind q quit

# trigger for layout sub-commands
bind ^Y eval 'command -c layout' 'layout show'
bind y  eval 'command -c layout' 'layout show'

# create/remove layout
bind -c layout c eval 'layout new'    'layout show'
bind -c layout x eval 'layout remove' 'layout show'

# switch to other layout
bind -c layout n eval 'layout next'  'layout show'
bind -c layout p eval 'layout prev'  'layout show'
bind -c layout ^N eval 'layout next' 'command -c layout' 'layout show'
bind -c layout ^P eval 'layout prev' 'command -c layout' 'layout show'

# create layout on first launch
#'layout new' 'split -v' 'focus screen' 'split -s' 'focus screen'
layout new
screen
split -v
focus
screen
split -s
focus
screen
focus
