defencoding utf-8
encoding utf-8 utf-8
multiuser on
autodetach on
hardstatus off

defscrollback 10000
shell -$SHELL

shelltitle "$ |zsh"
caption always "%?%F%{= rK}%:%{= Kk}%?%-w%?%F%{=u rW}%:%{=u KW}%?%n %t%{-}%+w%{-u} %= %c"

defbce             on
#term               xterm-256color
termcapinfo xterm-256color 'is=^[r^[mJ^[H^[?7h^[?1;4;6l'
termcapinfo xterm* 'Co#256:pa#32767:AB=\E[48;5;%dm:AF=\E[38;5;%dm:'
termcapinfo kterm* 'Co#256:pa#32767:AB=\E[48;5;%dm:AF=\E[38;5;%dm:'

escape ^a^a
startup_message off
vbell off
autodetach on

cjkwidth on

bind x remove
bind ^x remove
bind o only
bind ^o only
bind j eval 'focus down'
bind ^j eval 'focus down'
bind k eval 'focus up'
bind ^k eval 'focus up'
bind h eval 'focus left'
bind ^h eval 'focus left'
bind l eval 'focus right'
bind ^l eval 'focus right'
bind v eval 'split -v' focus screen
bind ^v eval 'split -v' focus screen
bind s eval 'split' focus screen
bind ^s eval 'split' focus screen
bind K kill
bind L redisplay
bind Q quit

# trigger for layout sub-commands
bind ^Y eval 'command -c layout' 'layout show'
bind y  eval 'command -c layout' 'layout show'

# create/remove layout
bind C eval 'layout new'    'next' 'layout show'
bind X eval 'layout remove' 'next' 'layout show'

# switch to other layout
bind N eval 'layout next' 'layout show'
bind P eval 'layout prev' 'layout show'

# create layout on first launch
#'layout new' 'split -v' 'focus screen' 'split -s' 'focus screen'
layout new
screen 0 vim
split -v
focus
screen 1
split -s
focus
screen 2
focus
